<div class="col-sm-6 col-md-6 col-lg-6">
    <br>

    <div class="story">

        <div class="question">
            <h3 style="color:black"><b> <%= @question.body %></b></h3>
            <br>
            <h4 style="color:grey"> <%= @question.description %></h4>
            Tags:<b><%= @question.tags %></b>
            <br>
            <br>
        </div>
        <% if Answer.where(question_id: @question.id, user_id: current_user.id).count(:id) > 0%>
            <%= link_to 'Answer',"javascript:void(0)",disabled: "disabled",id: 'answer-btn',class: "btn btn-primary" %>
        <% else %>
            <%= link_to 'Answer',"javascript:void(0)",id: 'answer-btn',class: "btn btn-primary" %>
        <% end %>
        <% @question.answers.each do |answer| %>


        <div class="answer">
            <hr>
            <div class="author">
            <h5 style="color: #616161;">Written by <b><%= User.find(answer.user_id).username %></b></h5>

            </div>

        <% if answer.image.file? %>
                <%=image_tag answer.image.url(:medium), class: "ans-img" %>
                <br>
            <% end %>
            <br>
            <div class="comment more pos">
            <%= answer.body %>
            </div>
            <div class="footer">
                <div class="row">
                    <div class="col-sm-2 col-md-2 col-lg-2">
                            <% like_count = Comment.where(user_id: current_user.id ,answer_id: answer.id).count%>
                            <% if like_count > 0 %>
                                <button href="/comments/update" disabled="true" id="likes" class=" btn btn-primary" value="<%= answer.id %>">ThumbsUp | <span id="show_likes"><%= answer.likes %></span></button>
                            <% else %>
                                <button href="/comments/update"  id="likes" class=" btn btn-primary" value="<%= answer.id %>">ThumbsUp | <span id="show_likes"><%= answer.likes %></span></button>
                            <% end %>


                    </div>
                    <div class="col-sm-6 col-md-6 col-lg-6">
                    </div>
                    <div class="col-sm-4 col-md-4 col-lg-4">
                    </div>
                </div>
            </div>

        </div>


        <% end %>
<br>
<br>



    </div>
    <div id="ans-form">
    <%= render 'ans-form', question: @question %>
    </div>
</div>
